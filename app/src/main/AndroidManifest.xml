<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.andriyantonov.tales" >
    // gives permission to use WAKE_LOCK
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ThemeDay"
        android:noHistory="true">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TaleActivity"
            android:label="@string/title_activity_tale1"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="ua.andriyantonov.tales.tale1" />
                <action android:name="ua.andriyantonov.tales.tale2" />
                <action android:name="ua.andriyantonov.tales.tale3" />
                <action android:name="ua.andriyantonov.tales.tale4" />
                <action android:name="ua.andriyantonov.tales.tale5" />
                <action android:name="ua.andriyantonov.tales.tale6" />
                <action android:name="ua.andriyantonov.tales.tale7" />
                <action android:name="ua.andriyantonov.tales.tale8" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Preferences"
            android:launchMode="singleTask">
        </activity>
    </application>

</manifest>
