<resources>

    <!-- Base application theme. -->
    <style name="MyTaleTheme" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:orientation">vertical</item>
        <item name="android:windowBackground">@drawable/theme_background</item>
    </style>
    <style name="taleNameStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/taleNameColor</item>
    </style>
    <style name="taleTextStyle">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/taleTextColor</item>
    </style>
    <style name="playerBtnStyle">
        <item name="android:alpha">0.3</item>
    </style>

</resources>
